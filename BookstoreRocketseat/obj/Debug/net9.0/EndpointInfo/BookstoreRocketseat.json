  "paths": {
    "/api/books": {
      "get": {
        "tags": [
          "Biblioteca"
        ],
        "summary": "Lista todos os livros cadastrados na livraria",
        "responses": {
          "200": {
            "description": "Lista de livros retornada com sucesso",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          }
        }
      }
    },
    "/api/books/{id}": {
      "get": {
        "tags": [
          "Biblioteca"
        ],
        "summary": "Busca um livro específico pelo seu ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID único do livro (formato GUID)",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Livro encontrado com sucesso",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "404": {
            "description": "Livro não encontrado com o ID informado",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Editar/Remover Livros"
        ],
        "summary": "Atualiza as informações de um livro existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do livro a ser atualizado",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Novos dados do livro (todos os campos são obrigatórios)",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestUpdateBookJson"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestUpdateBookJson"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RequestUpdateBookJson"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Livro atualizado com sucesso",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "204": {
            "description": "No Content",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos ou incompletos",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "404": {
            "description": "Livro não encontrado com o ID informado",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Editar/Remover Livros"
        ],
        "summary": "Remove um livro da livraria",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do livro a ser removido",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Livro removido com sucesso"
          },
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Livro não encontrado com o ID informado",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/api/books/new-book": {
      "post": {
        "tags": [
          "Criar Novos Livros"
        ],
        "summary": "Cria um novo livro na livraria",
        "requestBody": {
          "description": "Dados do livro a ser criado (título, autor, gênero, preço e estoque)",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestNewBookJson"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestNewBookJson"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RequestNewBookJson"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Livro criado com sucesso",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseBookJson"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos ou incompletos",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "409": {
            "description": "Conflito - Livro com mesmo título e autor já existe",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "author": {
            "type": "string",
            "nullable": true
          },
          "genre": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "RequestNewBookJson": {
        "required": [
          "author",
          "genre",
          "price",
          "stock",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "maxLength": 120,
            "minLength": 2,
            "type": "string"
          },
          "author": {
            "maxLength": 120,
            "minLength": 2,
            "type": "string"
          },
          "genre": {
            "minLength": 1,
            "type": "string"
          },
          "price": {
            "maximum": 1.7976931348623157E+308,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "stock": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "RequestUpdateBookJson": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "author": {
            "type": "string",
            "nullable": true
          },
          "genre": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ResponseBookJson": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "author": {
            "type": "string",
            "nullable": true
          },
          "genre": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "format": "int32"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Biblioteca"
    },
    {
      "name": "Editar/Remover Livros"
    },
    {
      "name": "Criar Novos Livros"
    }
  ]
}